body
    font-family 'Roboto', sans-serif

.ghchart
    padding 0 4px

.octicon
    display inline-block
    vertical-align text-top
    fill currentColor
    vertical-align text-bottom

nav
    display block

a
    background-color transparent
    -webkit-text-decoration-skip objects
    color #0366d6
    text-decoration none
    background-color transparent
    -webkit-text-decoration-skip objects
    &:hover
        text-decoration underline

a:active,a:hover
    outline-width 0

h1
    font-size 2em
    margin 0.67em 0
    font-size 32px
    font-weight 500

img
    border-style none
    width 100%
    height 100%

*
    box-sizing border-box

h1,h2
    margin-top 0
    margin-bottom 0

h2
    font-size 24px
    font-weight 500

h3
    font-size 16px
    font-weight 400
    span
        color #607D8B

p
    margin-top 0
    margin-bottom 10px
    span
        color #607D8B

ul,ol
    padding-left 0
    margin-top 0
    margin-bottom 0

.container-lg
    max-width 1012px
    margin-right auto
    margin-left auto

.col-3
    width 25%

.col-9
    width 75%

.css-truncate
    &.css-truncate-target
        display inline-block
        max-width 125px
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        vertical-align top

.border
    border 1px #e1e4e8 solid!important

.border-top
    border-top 1px #e1e4e8 solid!important

.border-gray-light
    border-color #eaecef!important

.border-gray-dark
    border-color #d1d5da!important

.rounded-1
    border-radius 3px!important

.rounded-2
    border-radius 6px!important

.text-gray
    color #586069!important

.position-relative
    position relative!important

.top-0
    top 0!important

.clearfix
    &::before
        display table
        content ""
    &::after
        display table
        clear both
        content ""

.float-left
    float left!important

.width-full
    width 100%!important
    height 100%

.mb-0
    margin-bottom 0!important

.mt-2
    margin-top 8px!important

.mb-2
    margin-bottom 8px!important

.mb-3
    margin-bottom 16px!important

.mt-4
    margin-top 24px!important

.mb-4
    margin-bottom 24px!important

.mb-5
    margin-bottom 32px!important

.pt-1
    padding-top 4px!important

.pr-2
    padding-right 8px!important

.pl-2
    padding-left 8px!important

.py-2
    padding-top 8px!important
    padding-bottom 8px!important

.p-3
    padding 16px!important

.pr-3
    padding-right 16px!important

.px-3
    padding-right 16px!important
    padding-left 16px!important

.py-3
    padding-top 16px!important
    padding-bottom 16px!important

.f4
    font-size 16px!important

@media (min-width: 768px)
    .f4
        font-size 16px!important

.f6
    font-size 12px!important

.text-small
    font-size 12px!important

.text-normal
    font-weight normal!important

.text-bold
    font-weight 500!important

.d-block
    display block!important

.avatar
    display inline-block
    overflow hidden
    line-height 1
    vertical-align middle
    border-radius 3px

.Counter
    display inline-block
    padding 2px 5px
    font-size 12px
    font-weight 500
    line-height 1
    color #586069
    background-color rgba(27, 31, 35, 0.08)
    border-radius 20px

.underline-nav
    display table
    height 62px

.underline-nav-item
    display table-cell
    padding-right 20px
    padding-left 20px
    font-size 14px
    color #586069
    vertical-align middle
    border-bottom 2px solid transparent

.underline-nav-item:hover,.underline-nav-item:focus
    color #24292e
    text-decoration none

.vcard-names
    line-height 1

.vcard-fullname
    font-size 26px
    line-height 30px

.vcard-username
    font-size 20px
    font-style normal
    font-weight 400
    line-height 24px
    color #666

.vcard-details
    list-style none
    .css-truncate
        &.css-truncate-target
            width 100%
            max-width 100%

.vcard-detail
    padding-left 24px
    font-size 14px
    padding-left 22px
    .octicon
        float left
        width 16px
        margin-top 3px
        margin-left -24px
        color #6a737d
        text-align center
        margin-left -22px

.vcard-names-container
    top 0

.user-profile-nav
    background-color #fff
    .underline-nav
        height 62px

.pinned-repos-list
    display -webkit-box
    display -webkit-flex
    display flex
    list-style none
    -webkit-flex-wrap wrap
    flex-wrap wrap
    -webkit-box-pack justify
    -webkit-justify-content space-between
    justify-content space-between

.repo-item
    display -webkit-box
    display -webkit-flex
    display flex
    width 359px
    .pinned-repository-handle
        padding-top 1px
        color #586069
        &:hover
            cursor -webkit-grab
            cursor grab

.repo-item-content
    display -webkit-box
    display -webkit-flex
    display flex
    width 100%
    -webkit-box-orient vertical
    -webkit-box-direction normal
    -webkit-flex-direction column
    flex-direction column

.pinned-repo-desc
    -webkit-box-flex 1
    -webkit-flex 1 0 auto
    flex 1 0 auto

.pinned-repo-meta
    display inline-block

.repo-language-color
    position relative
    top 1px
    display inline-block
    width 12px
    height 12px
    border-radius 50%

.JavaScript
    background-color #f1e05a

.Python
    background-color #3572A5

.CSS
    background-color #563d7c

.c-type
    text-align right
    float right

::-webkit-input-placeholder
    opacity .54
    color #999

:-ms-input-placeholder
    color #999
    color #6a737d

::placeholder
    color #999
    color #6a737d

.py-4
    padding-top 32px!important
    padding-bottom 32px!important

.text-center
    text-align center!important

.sidebar-module
    border-radius 4px
    overflow hidden
    margin-bottom 20px
    font-size 12px
    border 1px solid #ddd
    padding 0

.api-status
    font-size 14px
    a
        color #999
        background-position center bottom
        background-repeat no-repeat
        padding-bottom 40px
        display block
        &:hover
            text-decoration none
            color #327fc7
    .good
        color #227b41
        background-image url(https://developer.github.com/assets/images/status-icon-good.png)

@media only screen and (-webkit-min-device-pixel-ratio:2),only screen and (min-resolution:192dpi)
    .api-status
        .good
            background-size 32px 32px
            background-image url(https://developer.github.com/assets/images/status-icon-good@2x.png)

::-webkit-input-placeholder
    color #6a737d
    opacity 0.54

::-moz-placeholder
    color #6a737d

::-webkit-scrollbar
    z-index 30
    width 8px
    height 0
    y-index hidden

::-webkit-scrollbar-track
    background-color #111

::-webkit-scrollbar-thumb
    background-color #2b2e33